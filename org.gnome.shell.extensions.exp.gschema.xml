<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
    <schema id="org.gnome.shell.extensions.exp" path="/org/gnome/shell/extensions/exp/">
        <!-- string settings -->
        <key name="greeting-text" type="s">
            <default>"Hello sanjai"</default>
            <summary>Greeting sanjai</summary>
            <description>The text to display in notification</description>
        </key>
        
        <!-- boolean string -->
        <key name="show-icon" type="b">
            <default>true</default>
            <summary>show icon</summary>
            <description>whether to show panel icon or not</description>
        </key>
        
        <!-- Integer settings -->
        <key name="click-count" type="i">
            <default>0</default>
            <summary>click count</summary>
            <description>Number of times button was clicked</description>
        </key>
        
        <!-- choice enum/settings -->
        <key name="panel-position" type="s">
            <choices>
                <choice value="left"/>
                <choice value="center"/>
                <choice value="right"/>
            </choices>
            <default>"right"</default>
            <summary>Panel position</summary>
            <description>Where to show the button in the pannel</description>
        </key>
    </schema>
</schemalist>